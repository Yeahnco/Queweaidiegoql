<UserControl x:Class="Vistas.StackActMejora"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="180">
    <ToggleButton x:Name="ToggleBtnActMejora"  
                  Background="#4E16D1" 
                  Style="{DynamicResource MetroCircleToggleButtonStyle}" Checked="ToggleBtnActMejora_Checked">
        <StackPanel Background="White"
                    Height="36"
                    Width="174"
                    Margin="1,1,1,1">
            <TextBlock HorizontalAlignment="Center"
                       Grid.Column="3"
                       FontSize="12" 
                       Width="180" 
                       Height="39"
                       Foreground="Black"
                       TextAlignment="Center"
                       Text="{Binding DisplayActMejora, TargetNullValue=''}" />
        </StackPanel>
    </ToggleButton>
</UserControl>
